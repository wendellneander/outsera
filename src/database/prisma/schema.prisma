generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}
model Movie {
  id        Int     @id @default(autoincrement())
  year      Int
  title     String
  winner    Boolean @default(false)
  
  producers MovieProducer[]
  studios   MovieStudio[]

  @@map("movies")
}

model Producer {
  id        Int     @id @default(autoincrement())
  name      String  @unique
  
  movies    MovieProducer[]

  @@map("producers")
}

model Studio {
  id        Int     @id @default(autoincrement())
  name      String  @unique
  
  movies    MovieStudio[]

  @@map("studios")
}

model MovieProducer {
  movie       Movie    @relation(fields: [movieId], references: [id])
  movieId     Int       
  producer    Producer @relation(fields: [producerId], references: [id])
  producerId  Int

  @@id([movieId, producerId])
  @@map("movie_producers")
}

model MovieStudio {
  movie       Movie    @relation(fields: [movieId], references: [id])
  movieId     Int
  studio      Studio   @relation(fields: [studioId], references: [id])
  studioId    Int

  @@id([movieId, studioId])
  @@map("movie_studios")
}